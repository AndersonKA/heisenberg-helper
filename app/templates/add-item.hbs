<div class="container w-25 p-3">
  <form {{action "addItem" formValues on="submit"}}>
    <h1 class="title text-center">Add an Item</h1>
    <div class="form-group">
      {{#form-input class="form-control" label="item" property="item"}}{{/form-input}}
    </div>
    <div class="form-group">
      {{#form-input class="form-control" label="category" property="category"}}{{/form-input}}
   </div>
  <div class="form-group d-flex justify-content-between align-items-end">
    <button type="submit" class="btn btn-primary btn-block btn-flat" {{action 'addItem'}}>Add Item</button>
  </div>
  </form>
</div>
{{outlet}}
