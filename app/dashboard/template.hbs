{{#trianglify-canvas}}
  <div class="wrapper-nb--db">

    <div class="navbar">
      <div class="navbar-header">
        <h4 class="header">Heisenberg Helper</h4>
        <div>
          {{#link-to "dashboard.item.new" class="btn btn-dashboard" }}New Item{{/link-to}}
          <button {{action 'invalidateSession'}} class="btn btn-dashboard">Log out</button>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="section">
        <div class="row">
          <div class="col">
            <div class="card table-card">
                <h4 class="card-header card-header-grey">List of Items
                <h6>(click on an item to see more)</h6>
                {{#link-to "dashboard.item.new" class="btn btn-dashboard btn-new" }}New Item{{/link-to}}
            </h4>
              <div class="card-block accordion">
                {{#bs-accordion as |acc|}}
                  {{#each model as |item|}}
                  <div class="acc-container">
                  <div class="btn-container-table">
                    <button class="btn btn-table" {{action "deleteItem" item}}>Delete</button>
                    {{#link-to "dashboard.add-time" item class="btn btn-table"}}Add Time{{/link-to}}
                  </div>
                    {{#acc.item value=item.id title=item.item}}
                    <div class="table-content">
                      <p>Category: {{item.category}}</p>
                      <p>Times:
                        <ul>
                          {{#each item.durations as |duration|}}
                          <li>{{duration.time}} minutes</li>
                          {{/each}}
                        </ul>
                      </p>
                      </div>
                    {{/acc.item}}
                  </div>
                  {{/each}}
                {{/bs-accordion}}
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col">{{outlet}}</div>

          <div class="col">
            <div class="card"><img class="card-img-top" src="http://s2.dmcdn.net/MKoQw/1280x720-DWQ.jpg" alt="pie chart">{{!-- piechart JS stuff --}}</div>
          </div>
        </div>
      </div>
    </div>
  </div>
{{/trianglify-canvas}}
