{{#modal-dialog close="toggleModal"
                targetAttachment="center"
                translucentOverlay=true}}
  <div class="container modal">
    {{#with (changeset model) as |formValues|}}

      <form {{action "addItem" formValues on="submit"}}>
        <h1 class="title text-center">Add an Item</h1>
        <div class="form-group">
          {{#form-input class="form-control" label="item" changeset=formValues property="item"}}{{/form-input}}
        </div>
        <div class="form-group">
          {{#form-input class="form-control" label="category" changeset=formValues property="category"}}{{/form-input}}
       </div>
      <div class="form-group d-flex">
        <button type="submit" class="btn btn-primary btn-block btn-flat">Add Item</button>
      </div>
      </form>
    {{/with}}
  </div>
{{/modal-dialog}}
