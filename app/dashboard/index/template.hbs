{{outlet}}
<div class="wrapper-nb--db">

  <div class="navbar">
    <div class="navbar-header">
      <h4 class="header">Heisenberg Helper</h4>
      <div>
        {{#link-to "dashboard.item.new" class="btn btn-dashboard" }}Add New Item{{/link-to}}
        <button {{action 'invalidateSession'}} class="btn btn-dashboard">Log out</button>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="section">
      <div class="card">
        <h4 class="card-header">List of Items
          <h6>(click on an item to see more)</h6>
        </h4>
        <div class="card-block">
          {{#bs-accordion as |acc|}}
            {{#each model as |newitem|}}
              {{#acc.item value=newitem.id title=newitem.item}}
                <p>Category: {{newitem.category}}</p>
                <p>Times: </p>
                {{#link-to "dashboard.item.detail.new" item.id class="btn btn-primary" }}Add New Time{{/link-to}}
                <button class="btn btn-danger" {{action "deleteItem" newitem}}>future delete item button</button>
              {{/acc.item}}
            {{/each}}
          {{/bs-accordion}}
        </div>
      </div>
      <div class="row">
        {{add-time}}
        <div class="card col" style="margin: 1rem; padding: 0 -1rem;">
          <img class="card-img-top" src="http://s2.dmcdn.net/MKoQw/1280x720-DWQ.jpg" alt="pie chart">{{!-- piechart JS stuff --}}
        </div>
      </div>
    </div>
  </div>
</div>
